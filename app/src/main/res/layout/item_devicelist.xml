<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:paddingTop="8px"
        android:paddingBottom="8px">

        <TextView
            android:id="@+id/item_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10px"
            android:text="主机"
            android:textColor="#151515"
            android:textSize="20px" />

        <TextView
            android:id="@+id/item_tv_sn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/item_tv_title"
            android:text="SN583456633333331"
            android:textColor="#818181"
            android:textSize="20px" />

        <TextView
            android:id="@+id/item_tv_online"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/item_tv_sn"
            android:text="[在线]"
            android:textColor="#0fd2ae"
            android:textSize="20px" />

        <ImageView
            android:id="@+id/item_iv_alarm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="26px"
            android:src="@mipmap/ic_green" />

        <TextView
            android:id="@+id/item_tv_comm_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_tv_title"
            android:layout_marginLeft="10px"
            android:text="设备状态:"
            android:textColor="#151515"
            android:textSize="20px" />

        <TextView
            android:id="@+id/item_tv_comm_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_tv_title"
            android:layout_toRightOf="@id/item_tv_comm_title"
            android:text="正常"
            android:textColor="#0fd2ae"
            android:textSize="20px" />

        <TextView
            android:id="@+id/item_tv_comm_status_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/item_tv_comm_status"
            android:text=""
            android:textColor="#ED6663"
            android:textSize="18px"
            android:layout_alignBaseline="@+id/item_tv_comm_status"/>

        <TextView
            android:id="@+id/item_tv_battery_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_tv_comm_status"
            android:layout_marginLeft="10px"
            android:text="电量:"
            android:textColor="#151515"
            android:textSize="20px" />

        <TextView
            android:id="@+id/item_tv_battery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_tv_comm_status"
            android:layout_toRightOf="@id/item_tv_battery_title"
            android:text="80%"
            android:textColor="#0fd2ae"
            android:textSize="20px" />

    </RelativeLayout>
</RelativeLayout>