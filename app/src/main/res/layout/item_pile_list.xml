<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10px">

        <TextView
            android:id="@+id/item_pile_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="1002"
            android:textColor="#4e585c"
            android:textSize="26px" />

        <TextView
            android:id="@+id/item_construction_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="未施工"
            android:textColor="#ed6663"
            android:textSize="24px"
            android:layout_centerVertical="true"/>

        <ImageView
            android:id="@+id/item_construction_state_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10px"
            android:layout_toLeftOf="@id/item_construction_state"
            android:src="@mipmap/ic_location_red"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10px"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/item_pile_length"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="桩长: 100mm"
            android:textColor="#818181"
            android:textSize="24px" />

        <TextView
            android:id="@+id/item_concrete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="226px"
            android:text="砼标号: 200"
            android:textColor="#818181"
            android:textSize="24px" />

        <TextView
            android:id="@+id/item_pile_diameter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_pile_length"
            android:layout_marginTop="10px"
            android:text="桩径: 10mm"
            android:textColor="#818181"
            android:textSize="24px" />

        <TextView
            android:id="@+id/item_pile_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_pile_length"
            android:layout_marginLeft="226px"
            android:layout_marginTop="10px"
            android:text="桩类型: 工程桩"
            android:textColor="#818181"
            android:textSize="24px" />
    </RelativeLayout>


</LinearLayout>